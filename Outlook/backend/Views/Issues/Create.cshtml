@model backend.Models.Issue

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var VolumeID = Url.ActionContext.RouteData.Values["id"];
}

<h1>Create</h1>

<h4>Issue</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IssueNumber" class="control-label"></label>
                <input asp-for="IssueNumber" class="form-control" />
                <span asp-validation-for="IssueNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ar_pdf" class="control-label"></label>
                <input asp-for="ar_pdf" class="form-control" />
                <span asp-validation-for="ar_pdf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="en_pdf" class="control-label"></label>
                <input asp-for="en_pdf" class="form-control" />
                <span asp-validation-for="en_pdf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ar_cover" class="control-label"></label>
                <input asp-for="ar_cover" class="form-control" />
                <span asp-validation-for="ar_cover" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="en_cover" class="control-label"></label>
                <input asp-for="en_cover" class="form-control" />
                <span asp-validation-for="en_cover" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index" asp-route-id="@VolumeID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
