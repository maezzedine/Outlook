@model backend.Models.Issue

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Issue</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VolumeNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VolumeNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IssueNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IssueNumber)
        </dd>
        <dd class="col-sm-4 mr-2">
            @if (Model.ar_pdf != null)
            {
                <embed src="@Model.ar_pdf" type="application/pdf" zoom="8" view="Fit" height="350px" width="280" class="mt-2" />
            }
        </dd>
        <dd class="col-sm-4 ml-2">
            @if (Model.en_pdf != null)
            {
                <embed src="@Model.en_pdf" type="application/pdf" zoom="8" view="Fit" height="350px" width="280" class="mt-2" />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index" asp-route-id="@Model.VolumeID">Back to List</a>
</div>
