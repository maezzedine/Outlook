@model backend.Models.Member
@using backend.Models.Interfaces;

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var positions = new SelectList(new List<Position>
    {
        Position.Editor_In_Chief,
        Position.Senior_Editor,
        Position.Associate_Editor,
        Position.Junior_Editor,
        Position.Proofreader,
        Position.Web_Editor,
        Position.Copy_Editor,
        Position.Staff_Writer,
        Position.رئيس_تحرير,
        Position.المحرر,
        Position.نائب_المحرر,
        Position.رئيس_قسم,
        Position.مدقق_النسخة,
        Position.مدقق_لغوي,
        Position.مدقق_الموقع,
        Position.كاتب_صحفي
    });
}

<h1>Edit</h1>

<h4>Member</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <select asp-for="Position" class="form-control" asp-items="positions"></select>
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
