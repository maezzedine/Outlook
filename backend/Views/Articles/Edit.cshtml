@model backend.Models.Article
@using backend.Models.Interfaces;
@using backend.Controllers;

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var writers = ArticlesController.Writers;
    writers.Add("New Writer");
    var categories = ArticlesController.Categories;
}

<h1>Edit</h1>

<h4>Article</h4>
<hr />
<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger col-md-4"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group col-md-4">
        <label asp-for="Language" class="control-label"></label>
        <select asp-for="Language" class="form-control" asp-items="new SelectList(new List<Language> { Language.Arabic, Language.English })"></select>
        <span asp-validation-for="Language" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="Category.CategoryName" class="control-label"></label>
        <select asp-for="Category.CategoryName" class="form-control" asp-items="new SelectList(categories)"></select>
        <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="Member.Name" class="control-label"></label>
        <select id="writers" asp-for="Member.Name" class="form-control" asp-items="new SelectList(writers)" onchange="toggleEnabledField()"></select>
        <span asp-validation-for="Member.Name" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="NewWriter" class="control-label"></label>
        <input id="newWriter" asp-for="NewWriter" class="form-control" disabled />
        <span asp-validation-for="NewWriter" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="Subtitle" class="control-label"></label>
        <input asp-for="Subtitle" class="form-control" />
        <span asp-validation-for="Subtitle" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="Picture" class="control-label"></label>
        <input asp-for="Picture" ref="file" type="file" class="form-control" />
        @if (Model.PicturePath != null)
        {
            <img class="article-image-preview mt-2" src="@Model.PicturePath">
            <div class="row mt-2">
                <input type="checkbox" asp-for="DeletePicture" />
                <label>Check if you want to <i class="text-danger">DELETE</i> the Saved Image</label>
            </div>
        }
        <span asp-validation-for="Picture" class="text-danger"></span>
    </div>
    <div class="form-group col-md-12">
        <label asp-for="Text" class="control-label"></label>
        <textarea id="mytextarea" asp-for="Text" rows="20"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>


<div>
    <a asp-action="Index" asp-route-id="@Model.IssueID">Back to List</a>
</div>


<script>
    function toggleEnabledField() {
        var select = document.getElementById('writers');
        var writer = select.options[select.selectedIndex].value;
        if (writer == "New Writer") {
            document.getElementById('newWriter').disabled = false;
        } else {
            document.getElementById('newWriter').disabled = true;
        }
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
