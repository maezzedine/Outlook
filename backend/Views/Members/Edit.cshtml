@model backend.Models.Member
@using backend.Models.Interfaces;
@using backend.Controllers;

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var positions = new List<Position>
{
        Position.Editor_In_Chief,
        Position.Senior_Editor,
        Position.Associate_Editor,
        Position.Junior_Editor,
        Position.Proofreader,
        Position.Web_Editor,
        Position.Copy_Editor,
        Position.Staff_Writer,
        Position.Former_Member,
        Position.رئيس_تحرير,
        Position.المحرر,
        Position.نائب_المحرر,
        Position.رئيس_قسم,
        Position.مدقق_النسخة,
        Position.مدقق_لغوي,
        Position.مدقق_الموقع,
        Position.كاتب_صحفي,
        Position.عضو_سابق
    };

    var categories = MembersController.Categories;
}

<h1>Edit</h1>

<h4>Member</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>: 
                @Html.DisplayFor(model => model.Name)
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <select id="position" asp-for="Position" class="form-control" asp-items="new SelectList(positions)" onchange="CheckPosition()"></select>
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryField" class="control-label"></label>
                @if (MembersController.isJuniorEditor(Model))
                {
                    <select id="category" asp-for="CategoryField" class="form-control" asp-items="new SelectList(categories)"></select>
                }
                else
                {
                    <select id="category" asp-for="CategoryField" class="form-control" asp-items="new SelectList(categories)" disabled></select>
                }
                <span asp-validation-for="CategoryField" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    function CheckPosition() {
        var select = document.getElementById('position');
        var position = select.options[select.selectedIndex].value;
        if (position == "Junior_Editor" || position == "رئيس_قسم") {
            document.getElementById('category').disabled = false;
        } else {
            console.log(position);
            document.getElementById('category').disabled = true;
        }
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
