@model Outlook.Models.Core.Models.Volume

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Volume</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>: 
                @Html.DisplayFor(model => model.Number)
            </div>
            <div class="form-group">
                <label asp-for="FallYear" class="control-label"></label>
                <input asp-for="FallYear" class="form-control" />
                <span asp-validation-for="FallYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpringYear" class="control-label"></label>
                <input asp-for="SpringYear" class="form-control" />
                <span asp-validation-for="SpringYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
