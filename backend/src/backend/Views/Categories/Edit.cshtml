@model backend.Models.Category
@using backend.Models.Interfaces;

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var languages = new List<Language> { Language.Arabic, Language.English };
    var tags = new List<Tag> { Tag.Art, Tag.Cover, Tag.Culture, Tag.Gender, Tag.Lifestyle, Tag.News, Tag.Opinion, Tag.Personality, Tag.Society, Tag.Other };
}

<h1>Edit</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>:
                @Html.DisplayFor(model => model.CategoryName)
            </div>
            <div class="form-group">
                <label asp-for="Language" class="control-label"></label>
                <select asp-for="Language" class="form-control" asp-items="new SelectList(languages)"></select>
                <span asp-validation-for="Language" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tag" class="control-label"></label>
                <select asp-for="Tag" class="form-control" asp-items="new SelectList(tags)"></select>
                <span asp-validation-for="Tag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
